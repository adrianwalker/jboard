<?xml version="1.0" encoding="UTF-8"?>
<web-app id="SJChan" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee          http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Board</display-name>
    <welcome-file-list>
        <welcome-file>board.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>board</servlet-name>
        <servlet-class>org.adrianwalker.jboard.server.ServiceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>board</servlet-name>
        <url-pattern>/board/board</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>thread</servlet-name>
        <servlet-class>org.adrianwalker.jboard.server.ServiceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>thread</servlet-name>
        <url-pattern>/thread/thread</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>upload</servlet-name>
        <servlet-class>org.adrianwalker.jboard.server.UploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
</web-app>
