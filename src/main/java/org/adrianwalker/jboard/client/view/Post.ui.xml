<?xml version="1.0" encoding="windows-1252"?>

<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:view='urn:import:org.adrianwalker.jboard.client.view'>

  <g:HTMLPanel styleName="Post">
    <g:Anchor ui:field="anchor" />
    <table>
      <tr>
        <td>
          <g:Label ui:field="subject" styleName="Subject"/>
        </td>
        <td>
          <g:Label ui:field="date" styleName="Date"/>
        </td>
        <td>
          <g:Label ui:field="uuid" styleName="Uuid"/>
        </td>
      </tr>
    </table>        
    <table>
      <tr>
        <td style="width:0%; vertical-align:top;">
          <g:SimplePanel ui:field="imagePanel" />
        </td>
        <td style="width:100%; vertical-align:top;">
          <g:HTML ui:field="comment" styleName="Comment"/>
        </td>                        
      </tr>
    </table>
  </g:HTMLPanel>
</ui:UiBinder>